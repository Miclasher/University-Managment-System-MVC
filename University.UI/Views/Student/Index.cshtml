@model StudentIndexViewModel;

@{
	ViewData["Title"] = "Student list";
}

<div class="container">
    <div class="row pt-4">
        <div class="col-6 pb-3">
            <h2 class="text-start">Students list</h2>

            @if (Model.ErrorMessage is not null)
            {
                <p class="text-danger">Model.ErrorMessage</p>
            }
        </div>
        <div class="col-6 text-end">
			@if (Model.CanBeCreated)
			{
                <a asp-action="Create" asp-controller="Student" class="btn btn-dark">Create Student</a>
			}
			else
			{
				<p class="text-danger">Please add groups to create student</p>
			}
        </div>
    </div>
    <table class="table table-borderless table-striped">
        <thead>
            <tr>
                <th>
                    Student name
                </th>
                <th>
                    Student surname
                </th>
                <th>
                    Student group
                </th>
                <th>
                    Actions
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model.Students)
            {
                <tr>
                    <td>
                        @student.FirstName
                    </td>
                    <td>
                        @student.LastName
                    </td>
                    <td>
						@student.Group.Name
                    </td>
                    <td>
                        <a asp-action="Edit" asp-controller="Student" asp-route-id="@student.Id" class="btn btn-dark">Edit</a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-controller="Student" asp-route-id="@student.Id" class="btn btn-outline-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
