@model CourseDTO;

@{
	ViewData["Title"] = "Delete course";
	var groupsPresent = Model.Groups.Any();
}

<h2>Delete course</h2>

<form class="container" asp-action="Delete">
	<div class="form-group m-3">
		<label asp-for="Name"></label>
		<input asp-for="Name" class="form-control" disabled />
	</div>
	<div class="form-group m-3">
		<label asp-for="Description"></label>
		<input asp-for="Description" class="form-control" disabled />
	</div>
	@if (groupsPresent)
	{
		<p class="m-3 text-danger">There are groups associatied this course. You must delete them before deleting course itself</p>
	}
	else
	{
		<button type="submit" class="m-3 btn btn-dark">Delete</button>
	}
</form>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
